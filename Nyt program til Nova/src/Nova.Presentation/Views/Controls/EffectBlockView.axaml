<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Nova.Presentation.Views.Controls.EffectBlockView"
             x:CompileBindings="False"
             Name="effectBlockView">
    
    <Border Background="#1E1E1E" 
            Padding="12" 
            CornerRadius="4">
        <Expander IsExpanded="True">
            <Expander.Header>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- On/Off Indicator (green if enabled, gray if disabled) -->
                    <Ellipse Width="12" 
                             Height="12" 
                             Name="StatusIndicator"/>
                    
                    <!-- Effect Name -->
                    <TextBlock Text="{Binding #effectBlockView.Header}" 
                               FontWeight="Bold" 
                               Foreground="#FFFFFF"/>
                    
                    <!-- Effect Type -->
                    <TextBlock Text="{Binding Type, StringFormat='({0})'}" 
                               Foreground="#AAAAAA"
                               FontStyle="Italic"/>
                </StackPanel>
            </Expander.Header>
            
            <!-- Content slot for parameter display -->
            <ContentPresenter Content="{Binding #effectBlockView.ParametersContent}" 
                              Margin="20,8,0,0"/>
        </Expander>
    </Border>
</UserControl>
