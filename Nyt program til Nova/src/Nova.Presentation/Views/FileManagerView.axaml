<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Nova.Presentation.ViewModels"
             x:Class="Nova.Presentation.Views.FileManagerView"
             x:DataType="vm:FileManagerViewModel">

    <Design.DataContext>
        <vm:FileManagerViewModel />
    </Design.DataContext>

    <StackPanel Spacing="{StaticResource SpacingMedium}">
        <!-- Bank Operations -->
        <Border Background="{StaticResource BackgroundSecondary}" 
                Padding="{StaticResource CardPadding}" 
                CornerRadius="{StaticResource BorderRadiusLarge}">
            <StackPanel Spacing="{StaticResource SpacingMedium}">
                <TextBlock Text="Bank File Operations" 
                           FontWeight="{StaticResource FontWeightBold}" 
                           FontSize="{StaticResource FontSizeLarge}"
                           Foreground="{StaticResource TextPrimary}"/>
                
                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto">
                    <Button Grid.Column="0"
                            Content="Save Bank to File"
                            Command="{Binding SaveBankCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource ButtonPadding}"
                            AutomationProperties.Name="Save bank to file"
                            AutomationProperties.HelpText="Export all 60 presets to a file" />
                    
                    <Button Grid.Column="2"
                            Content="Load Bank from File"
                            Command="{Binding LoadBankCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource ButtonPadding}"
                            AutomationProperties.Name="Load bank from file"
                            AutomationProperties.HelpText="Import 60 presets from a file" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Preset Operations -->
        <Border Background="{StaticResource BackgroundSecondary}" 
                Padding="{StaticResource CardPadding}" 
                CornerRadius="{StaticResource BorderRadiusLarge}">
            <StackPanel Spacing="{StaticResource SpacingMedium}">
                <TextBlock Text="Preset File Operations" 
                           FontWeight="{StaticResource FontWeightBold}" 
                           FontSize="{StaticResource FontSizeLarge}"
                           Foreground="{StaticResource TextPrimary}"/>
                
                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto">
                    <Button Grid.Column="0"
                            Content="Export Preset"
                            Command="{Binding ExportPresetCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource ButtonPadding}"
                            AutomationProperties.Name="Export single preset"
                            AutomationProperties.HelpText="Export selected preset to file" />
                    
                    <Button Grid.Column="2"
                            Content="Import Preset"
                            Command="{Binding ImportPresetCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource ButtonPadding}"
                            AutomationProperties.Name="Import single preset"
                            AutomationProperties.HelpText="Import preset from file" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Status Display -->
        <Border Background="{StaticResource BackgroundSecondary}" 
                Padding="{StaticResource CardPadding}" 
                CornerRadius="{StaticResource BorderRadiusLarge}">
            <StackPanel Spacing="8">
                <TextBlock Text="File Status" 
                           FontWeight="{StaticResource FontWeightBold}" 
                           FontSize="{StaticResource FontSizeLarge}"
                           Foreground="{StaticResource TextPrimary}"/>
                
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondary}"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Polite"
                           AutomationProperties.Name="File operation status"/>
                
                <TextBlock Text="{Binding CurrentFilePath, StringFormat='Current file: {0}'}"
                           Foreground="{StaticResource TextTertiary}"
                           TextWrapping="Wrap"
                           IsVisible="{Binding CurrentFilePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
