<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Nova.Presentation.ViewModels"
             x:Class="Nova.Presentation.Views.FileManagerView"
             x:DataType="vm:FileManagerViewModel"
             Background="#2D2D2D"
             Foreground="#E0E0E0">

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="20">
            <!-- Bank Operations -->
            <Border Background="#1E1E1E" Padding="16" CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="Bank File Operations" 
                               FontWeight="Bold" 
                               FontSize="16"/>
                    
                    <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto">
                        <Button Grid.Column="0"
                                Content="ðŸ’¾ Save Bank to File"
                                Command="{Binding SaveBankCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="16,8"/>
                        
                        <Button Grid.Column="2"
                                Content="ðŸ“‚ Load Bank from File"
                                Command="{Binding LoadBankCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Preset Operations -->
            <Border Background="#1E1E1E" Padding="16" CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="Preset File Operations" 
                               FontWeight="Bold" 
                               FontSize="16"/>
                    
                    <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto">
                        <Button Grid.Column="0"
                                Content="ðŸ“¤ Export Preset"
                                Command="{Binding ExportPresetCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="16,8"/>
                        
                        <Button Grid.Column="2"
                                Content="ðŸ“¥ Import Preset"
                                Command="{Binding ImportPresetCommand}"
                                HorizontalAlignment="Stretch"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Status Display -->
            <Border Background="#1E1E1E" Padding="16" CornerRadius="8">
                <StackPanel Spacing="8">
                    <TextBlock Text="File Status" 
                               FontWeight="Bold" 
                               FontSize="16"/>
                    
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#AAAAAA"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="{Binding CurrentFilePath, StringFormat='Current file: {0}'}"
                               Foreground="#888888"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
