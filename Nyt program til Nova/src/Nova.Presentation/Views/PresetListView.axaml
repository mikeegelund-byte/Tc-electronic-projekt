<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Nova.Presentation.ViewModels"
             x:Class="Nova.Presentation.Views.PresetListView"
             x:DataType="vm:PresetListViewModel">

    <Border Background="{StaticResource BackgroundSecondary}" 
            Padding="{StaticResource CardPadding}" 
            CornerRadius="{StaticResource BorderRadiusLarge}" 
            Margin="0,16,0,0">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" 
                       Text="User Bank Presets (60)" 
                       FontWeight="{StaticResource FontWeightBold}" 
                       FontSize="{StaticResource FontSizeLarge}"
                       Margin="0,0,0,12"
                       Foreground="{StaticResource TextPrimary}"/>

            <TextBlock DockPanel.Dock="Top"
                       Text="No presets loaded. Click 'Download User Bank' to retrieve presets from pedal."
                       IsVisible="{Binding !HasPresets}"
                       Foreground="{StaticResource TextTertiary}"
                       FontStyle="Italic"
                       Margin="0,8,0,0"/>

            <DataGrid ItemsSource="{Binding Presets}"
                      SelectedItem="{Binding SelectedPreset}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      IsVisible="{Binding HasPresets}"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderDefault}"
                      Background="{StaticResource BackgroundPrimary}"
                      RowBackground="{StaticResource BackgroundSecondary}"
                      AutomationProperties.Name="Preset list"
                      AutomationProperties.HelpText="List of all 60 presets in user bank">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Position" 
                                        Binding="{Binding Position}" 
                                        Width="100"
                                        FontFamily="{StaticResource FontMonospace}"/>
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*" />
                    <DataGridTextColumn Header="Preset #" 
                                        Binding="{Binding Number}" 
                                        Width="100"
                                        FontFamily="{StaticResource FontMonospace}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Border>
</UserControl>
