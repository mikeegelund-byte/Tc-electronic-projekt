<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Nova.Presentation.Converters"
             x:Class="Nova.Presentation.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Colors.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToGreenGrayBrushConverter x:Key="BoolToGreenGrayBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Animations.axaml"/>
        <StyleInclude Source="/Styles/NovaTheme.axaml"/>
    </Application.Styles>
</Application>
