<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Nova.Presentation.Controls.ResponseCurveEditor"
             Width="400" Height="300">
    <Border BorderBrush="{DynamicResource BorderDefault}" 
            BorderThickness="1" 
            Background="{DynamicResource BackgroundSecondary}">
        <Canvas Name="CurveCanvas" 
                Width="400" Height="300"
                Background="Transparent"
                PointerPressed="OnPointerPressed"
                PointerMoved="OnPointerMoved"
                PointerReleased="OnPointerReleased"
                AutomationProperties.Name="Response curve canvas"
                AutomationProperties.HelpText="Interactive canvas for editing pedal response curve">
            
            <!-- Grid lines will be drawn in code-behind -->
            <!-- Curve path will be drawn in code-behind -->
            <!-- Control points will be drawn in code-behind -->
            
        </Canvas>
    </Border>
</UserControl>
